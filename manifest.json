{
  "description": "Play magnet link or acestream link with Sodaplayer directly from Firefox",
  "manifest_version": 2,
  "name": "OpenWithSodaPlayer",
  "version": "0.3.1",
  "icons": {
    "64": "icons/soda-64.png"
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/soda-64.png",
    "default_title": "View All Playable Links",
    "default_popup": "popup.html",
    "browser_style": true
  },
  
  "background": {
    "scripts": ["open.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["findLinks.js"]
    },
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["redditClickableLink.js"]
    }
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Space"
      }
    }
  }
}